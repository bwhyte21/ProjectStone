@model ProjectStone_Models.OrderHeader

<div class="text-center">
    @if (Model is not null)
    {
        <h1 class="text-info">Order Created</h1>
        <p>Order #@Model.Id has been successfully created!</p>
        <img alt="Order Confirmation" src="~/imgs/patio.jpg" style="width: 80%"/>
    }
    else
    {
        <h1 class="text-info">Inquiry Confirmation</h1>
        <p>We have received your inquiry. Sit tight! Someone from our team will contact you shortly!</p>
        <img alt="Inquiry Confirmation" src="~/imgs/patio.jpg" style="width: 80%"/>
    }
</div>