@* Get category list from model. *@
@model IEnumerable<ProjectStone.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            @* Use tag helpers to redirect to the Create action *@
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                Create New Category
            </a>
        </div>
    </div>

    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width: 50%">@obj.Name</td>
                    <td style="width: 30%">@obj.DisplayOrder</td>
                    <td class="text-center">
                      <div class="w-75 btn-group" role="group">
                          <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                              Edit
                          </a>
                          @* Pass in model obj identifier of category to delete the desired item from the table via asp-route-[paramName] tag helper *@
                          <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                              Delete
                          </a>
                      </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No categories available.</p>
    }

</div>