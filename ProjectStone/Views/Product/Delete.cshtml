@using ProjectStone_Utility
@model ProjectStone_Models.Product

<form method="post">
    @* Grab the Id when we post it *@
    <input asp-for="Id" hidden/>
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote" disabled></textarea>
                    </div>
                </div>

                @* Use ViewBag to pass data from controller to view. *@
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="SubCategoryTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SubCategory.Name" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button class="btn btn-danger w-100" type="submit">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-warning w-100"><i class="fas fa-sign-out-alt"></i> &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id is not 0)
                {
                    <img alt="Product Image" src="@WebConstants.ImagePath@Model.Image" style="width: 100%; border-radius: 5px; border: 1px solid gray;"/>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/productdelete.js"></script>
}