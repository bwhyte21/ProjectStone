@* Get category list from model. *@
@model IEnumerable<ProjectStone.Models.SubCategory>
@{
  ViewData["Title"] = "Sub-Categories";
}

<div class="container p-3">
  <div class="row pt-2">
    <div class="col-6">
      <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-right">
      @* Use tag helpers to redirect to the Create action *@
      <a asp-controller="SubCategory" asp-action="Create" class="btn btn-primary">
        Create New Sub-Category
      </a>
    </div>
  </div>
  
  <br />
  
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width: 100%">
      <thead>
      <tr>
        <th>Category Name</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td style="width: 50%">@obj.Name</td>
          <td></td>
        </tr>
      }
      </tbody>
    </table>
  }
  else
  {
    <p>No categories available.</p>
  }

</div>