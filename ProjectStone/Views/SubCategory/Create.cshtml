@model ProjectStone.Models.SubCategory
<form method="post" asp-action="Create">
  <div class="border p-3">

    <div class="form-group row">
      <h2 class="text-info pl-3">Add Sub-Category</h2>
    </div>
    <div class="row">
      <div class="col-8">
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="Name"></label>
          </div>
          <div class="col-8">
            <input asp-for="Name" class="form-control" />
          </div>

        </div>
        
        <div class="form-group row">
          <div class="col-8 offset-4 row">

            <div class="col">
              <input type="submit" value="Create" class="btn btn-info w-100" />
            </div>
            <div class="col">
              <a asp-controller="SubCategory" asp-action="Index" class="btn btn-danger w-100">Back</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-4">
        @* Keep this empty *@
      </div>
    </div>
  </div>
</form>